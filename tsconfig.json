{
  "compilerOptions": {
    "outDir": "./dist",
    "strictNullChecks": false,
    "module": "CommonJS",
    "target": "ES2019",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "rootDir": "src",
    "paths": {
      "@presentation/*": ["presentation/*"],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}
